#include <stdio.h>

int main() {
    int i, j, space, rows;
    printf("Enter number of rows: ");
    scanf("%d", &rows);

    printf("\nRight-Angled Triangle:\n");
    for(i = 1; i <= rows; i++) {
        for(j = 1; j <= i; j++)
            printf("* ");
        printf("\n");
    }

    printf("\nEquilateral Triangle:\n");
    for(i = 1; i <= rows; i++) {
        for(space = i; space < rows; space++)
            printf(" ");
        for(j = 1; j <= (2*i-1); j++)
            printf("*");
        printf("\n");
    }

    return 0;
}
