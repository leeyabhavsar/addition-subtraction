#include <stdio.h>

int main() {
    float num1, num2;
    float sum, diff, prod, quot;

    printf("Enter two numbers: ");
    scanf("%f %f", &num1, &num2);

    sum = num1 + num2;
    diff = num1 - num2;
    prod = num1 * num2;
    quot = num1 / num2;

    printf("\nAddition: %.2f", sum);
    printf("\nSubtraction: %.2f", diff);
    printf("\nMultiplication: %.2f", prod);
    printf("\nDivision: %.2f\n", quot);

    return 0;
}
