#include <stdio.h>

int factRec(int n) {
    if(n == 0)
        return 1;
    else
        return n * factRec(n - 1);
}

int main() {
    int n, i, fact = 1;

    printf("Enter a number: ");
    scanf("%d", &n);

    // Iterative method
    for(i = 1; i <= n; i++)
        fact *= i;

    printf("Factorial using loop = %d\n", fact);
    printf("Factorial using recursion = %d\n", factRec(n));

    return 0;
}
